<h1>
  List of all movies
</h1>

<hr>

<form action="/movies" method="post">
  <label for="title_field">Title:</label>
  <input id="title_field" type="text" name="title_input">
  <br>
  <label for="year_field">Year:</label>
  <input id="year_field" type="text" name="year_input">
  <br>
  <label for="duration_field">Duration:</label>
  <input id="duration_field" type="text" name="duration_input">
  <br>
  <label for="description_field">Description:</label>
  <textarea id="description_field" type="text" name="description_input"></textarea>
  <br>
  <label for="image_field">Image:</label>
  <input id="image_field" type="text" name="image_input">
  <br>
  <label for="id_field">Director ID:</label>
  <input id="id_field" type="text" name="id_input">
  <br>
  <button>Create movie</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
